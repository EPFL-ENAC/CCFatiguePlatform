  "version": "0.2.0",
  "configurations": [
    {
      "name": "backend: run",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["ccfatigue.main:app", "--reload"],
      "jinja": true,
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/secrets/.env",
      "preLaunchTask": "database"
    },
    {
      "name": "frontend: run",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/frontend",
      "preLaunchTask": "serve",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      }
    },
    {
      "name": "backend: alembic",
      "type": "python",
      "request": "launch",
      "module": "alembic",
      "args": ["upgrade", "head"],
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/secrets/.env"
    },
    {
      "name": "backend: initial inject to db",
      "type": "python",
      "request": "launch",
      "module": "initial_inject_to_db",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/secrets/.env"
    }
  ]
}
